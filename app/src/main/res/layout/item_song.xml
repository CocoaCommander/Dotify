<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemRoot">
    <ImageView
        android:id="@+id/ivSongPic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvSongListSongName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/ivSongPic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvSongListArtistName"
        android:text="Test"/>
    <TextView
        android:id="@+id/tvSongListArtistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/ivSongPic"
        app:layout_constraintTop_toBottomOf="@+id/tvSongListSongName"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Test 2"/>
</androidx.constraintlayout.widget.ConstraintLayout>